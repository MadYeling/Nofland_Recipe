<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <androidx.appcompat.widget.Toolbar
        app:title=" 配方"
        app:menu="@menu/menu"
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/green_500"
        app:titleTextColor="@color/white" />

    <!--    <ImageView-->
    <!--        android:id="@+id/welcome"-->
    <!--        android:layout_width="match_parent"-->
    <!--        android:layout_height="match_parent"-->
    <!--        android:scaleType="fitStart"-->
    <!--        android:src="@drawable/welcomeimg" />-->

    <LinearLayout
        android:id="@+id/welcome"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:src="@drawable/logo_nofland"
            android:layout_marginTop="80dp"
            android:layout_gravity="center_horizontal"
            android:layout_width="200dp"
            android:layout_height="150dp" />

        <TextView
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="欢迎使用诺弗兰物语配方查询APP\n点击右上角的搜索图标开始搜索"
            android:textColor="#CC6C4A"
            android:textSize="20sp"
            android:gravity="center"
            android:textStyle="bold" />

        <TextView
            android:layout_marginStart="15dp"
            android:layout_marginTop="50dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="APP 制作By 一口一个拉拉肥\n数据来源：https://wiki.biligame.com/nofland/配方"
            android:textColor="@color/black"
            android:textSize="12sp" />

    </LinearLayout>

    <ListView
        android:id="@+id/main_activity_recipe_list_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>